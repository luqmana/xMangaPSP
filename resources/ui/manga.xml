<window name="MangaSelect" type="main">
    
    <!--<image x="0" y="0" src="test5.jpg" swizzle="true" />-->
    
    <bouncyBox colour="red" />
    <bouncyBox x="480" colour="blue" />
    <bouncyBox y="272" colour="green" />
    <bouncyBox x="480" y="272" colour="gray" />
        
    <!-- Background -->
    <quad x="0" y="0" width="480" height="272" colour="235,234,235,200" />
    
    <quad x="0" y="0" width="480" height="30" colour="black,200" />
    <text x="240" y="20" font="{LATIN_SANS_SERIF_BOLD}" align="center" size="1.0" colour="red" shadowColour="90,0,0" value="xMangaPSP" />
    
    <text x="240" y="65" font="{LATIN_SANS_SERIF_ITALIC_BOLD}" align="center" size="1.0" colour="36,36,36" value="Choose a manga series:" />
    <text x="240" y="85" font="{LATIN_SANS_SERIF_REGULAR_SMALL}" align="center" size="1.0" colour="36,36,36" value="(Total: {mangaCount})" />
        
    <mangalist x="240" y="120" offsetX="0" offsetY="25" maxItems="5">
    
        <text whence="scrolldown" x="380" y="120" font="{SYMBOLS}" align="center" size="1.0" colour="gray" value="" />
        <text whence="scrollup" x="380" y="120" font="{SYMBOLS}" align="center" size="1.0" colour="black" value="" />
    
        <text whence="active" font="{LATIN_SANS_SERIF_REGULAR_SMALL}" align="center" size="1.0" colour="36,36,36" value="[]" />
        
        <text whence="inactive" font="{LATIN_SANS_SERIF_REGULAR_SMALL}" align="center" size="1.0" colour="red" value="[]" />
        
        <text whence="scrollup" x="380" y="214" font="{SYMBOLS}" align="center" size="1.0" colour="gray" rotate="180" value="" />
        <text whence="scrolldown" x="380" y="214" font="{SYMBOLS}" align="center" size="1.0" colour="black" rotate="180" value="" />
    
    </mangalist>

    <navlist x="100" y="261" offsetX="20" offsetY="0" maxItems="15">
        
        <text whence="active" font="{LATIN_SANS_SERIF_REGULAR_SMALL}" align="center" size="1.0" colour="red" value="[]" />
        <text whence="inactive" font="{LATIN_SANS_SERIF_REGULAR_SMALL}" align="center" size="1.0" colour="36,36,36" value="[]" />
            
    </navlist>


    
    <text x="5" y="265" font="{SYMBOLS}" align="left" size="1.0" colour="23,23,23" value="" />
    <text x="25" y="261" font="{LATIN_SERIF_REGULAR_SMALL}" align="left" size="1.0" colour="73,73,73" value="- Select" />
    
    <text x="455" y="261" font="{LATIN_SERIF_REGULAR_SMALL}" align="right" size="1.0" colour="73,73,73" value="Back - " />
    <text x="475" y="264" font="{SYMBOLS}" align="right" size="1.0" colour="23,23,23" value="" />
            
</window>
